root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.properties]
ij_properties_keep_blank_lines = true
ij_properties_spaces_around_key_value_delimiter = true

[*.yaml]
ij_yaml_indent_size = 2

[*.java]
ij_java_method_call_chain_wrap = on_every_item
ij_java_method_parameters_wrap = on_every_item
ij_java_align_multiline_chained_methods = true
ij_java_blank_lines_after_class_header = 1
ij_java_blank_lines_around_field = 1

[*.{kt,kts}]
ij_any_method_call_chain_wrap = on_every_item
ij_kotlin_blank_lines_after_class_header = 1